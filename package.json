{
  "name": "portfolio",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "test:unit": "jest"
  },
  "dependencies": {
    "pinia": "^2.0.32",
    "sass": "^1.60.0",
    "ts-jest": "^29.1.1",
    "vue": "^3.2.47",
    "vue-eslint-parser": "^9.3.1",
    "vue-loader": "^17.2.2",
    "vue-router": "^4.1.6",
    "vue3-touch-events": "^4.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^18.14.2",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.48.0",
    "eslint-plugin-vue": "^9.17.0",
    "jest": "^29.6.4",
    "npm-run-all": "^4.1.5",
    "typescript": "~4.8.4",
    "vite": "^4.1.4",
    "vue-jest": "^4.0.1",
    "vue-tsc": "^1.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true,
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "testMatch": [
      "<rootDir>/src/components/__tests__/*.(tests).{js,jsx,ts,tsx}",
      "<rootDir>/src/components/__tests__/HelloWorld.spec.ts",
      "<rootDir>/src/components/__tests__/?(*.)(spec|test).{js,jsx,ts,tsx}"
    ]
  }
}
